[Unit]
Description=Jupyter notebook for NMCT box
After=network.target

[Service]
User=pi
Group=www-data
WorkingDirectory=${NMCT_HOME}/src/web
Environment="PATH=${NMCT_HOME}/env/bin"
ExecStart="${NMCT_HOME}/env/bin/bokeh" serve "${NMCT_HOME}/src/web/plot.py" --prefix=/plot/ --port=2003 --allow-websocket-origin=*

[Install]
WantedBy=multi-user.target
