#user       www-data;  ## Default: nobody
#worker_processes  5;  ## Default: 1
error_log  /tmp/nmct-nginx-error.log;


    map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
    }

	upstream jupyter {

		server localhost:2002;
	}
	upstream jupyterhub {

		server localhost:2003;
	}
	upstream bokeh {

		server localhost:2004;
	}
	server {

		listen 80 default_server;

		location / {

			include uwsgi_params;
			uwsgi_pass unix:${NMCT_HOME}/src/nmct/web/nmct-flask.sock;
			proxy_set_header Host $host;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header X-Real-IP $remote_addr;
		}

		location /notebook {

			proxy_pass http://jupyter;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header X-Real-IP $remote_addr;
			proxy_set_header Host $host:$server_port;
			proxy_set_header Origin "";
		}

        location ~* /(api/kernels/[^/]+/(channels|iopub|shell|stdin)|terminals/websocket)/? {

			proxy_pass http://jupyter;
			proxy_set_header Host $host:$server_port;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Real-IP $remote_addr;
			proxy_redirect off;
			# websocket support
			proxy_http_version 1.1;
			proxy_set_header Upgrade "websocket";
			proxy_set_header Connection "Upgrade";
			proxy_read_timeout 86400;
			proxy_set_header Origin "";
		}

		location /hub {

			proxy_pass http://jupyterhub;
			proxy_set_header Host $host;
		}

		location /plot {

			proxy_pass http://bokeh;
			proxy_set_header Upgrade $http_upgrade;
			proxy_set_header Connection "upgrade";
			proxy_http_version 1.1;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header X-Real-IP $remote_addr;
	    	proxy_set_header Host localhost:$server_port;
			proxy_buffering off;
			proxy_redirect off;
		}

	}
